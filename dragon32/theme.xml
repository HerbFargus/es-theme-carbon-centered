<theme>
    <formatVersion>3</formatVersion>
    <include>./../carbon.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./../art/carbon_fiber.png</path>
		</image>
		
		<image name="overlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.2</pos>
			<origin>0.5 0.5</origin>
			<size>0.3 0</size>
			<path>./art/controller.svg</path>
			<color>8b0000</color>
		</image>
		
		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.060</size>
			<path>./../art/system_bottom.png</path>
		</image> 
		
		<image name="logo">
			<path>./art/system.svg</path>
        </image>
		
		<helpsystem name="help">
			<textColor>7d7d7d</textColor>
			<iconColor>8b0000</iconColor>
		</helpsystem>
		
	</view>

	<view name="basic, detailed">

		<image name="logo">
			<path>./art/system.svg</path>
			<pos>0.025 0.0775</pos>
			<maxSize>0.55 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>
		
		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./../art/carbon_fiber.png</path>
		</image>
		
		<image name="logo2" extra="true">
			<path>./art/controller.svg</path>
			<pos>0.87 0.0775</pos>
			<maxSize>0.7 0.15</maxSize>
			<origin>0 0.5</origin>
		</image>
		
		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<path>./../art/bottom.png</path>
		</image> 

		<image name="top" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
			<path>./../art/top.png</path>
		</image> 
		
	</view>

	
</theme>